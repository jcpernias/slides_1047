%% Singular and plural words
\RequirePackage{translator}
\usedictionary{docs-marks}

\newlength{\@pointlen}
\newcommand*{\@pointslabel}{\translate{points}}%
\newcommand*{\@pointlabel}{\translate{point}}%

\newcommand*{\@points}[1]{%
  \setlength{\@pointlen}{#1 pt}%
  \ensuremath{\bm{#1}}~\ifthenelse{\lengthtest{\@pointlen = 1pt}}{%
    \@pointlabel}{\@pointslabel}}

\newcommand*{\points}[1]{\textbf{(\@points{#1})}}

