  \thispagestyle{empty}%
  \@twocells{\includegraphics[scale=1]{by-sa}}{%
    \translate{CCstart}
    \href{http://creativecommons.org/licenses/by-sa/4.0/}{%
      \translate{CClink}}}%
  \cleardoublepage{}}


