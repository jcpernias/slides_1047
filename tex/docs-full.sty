%% Tightcenter: removes vertical space of center environment
\newenvironment{tightcenter}{%
  \setlength\topsep{0pt}%
  % \setlength\parskip{0pt}%
  \begin{center}}{%
  \end{center}}

\newenvironment{tightquotation}{%
  \setlength\topsep{0pt}%
  % \setlength\parskip{0pt}%
  \footnotesize%
  \begin{displayquote}}{\end{displayquote}}

\newenvironment{tightquote}{%
  \setlength\topsep{0pt}%
  % \setlength\parskip{0pt}%
